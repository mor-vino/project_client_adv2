<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.mor.final_project_client_adv2.MenuFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/menuFragment"
    android:clickable="true">

<RelativeLayout
    android:id="@+id/settingButtns"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_gravity="bottom"
    android:background="#ccFFFF99"
    android:layout_weight="12.80">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/frag_menu_left_up_layout">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="channels list"
                android:id="@+id/frag_menu_chan_list_btnId"
                android:layout_alignParentTop="true"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="#aaFFCC99"
                android:textColor="#FF0000"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add channel"
                android:id="@+id/frag_menu_add_channel_btnId"
                android:layout_below="@+id/frag_menu_chan_list_btnId"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="7dp"
                android:background="#aaFFCC99"
                android:textColor="#FF0000"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="settings"
                android:id="@+id/frag_menu_settings_btnId"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="7dp"
                android:background="#aaFFCC99"
                android:textColor="#FF0000"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="remove channel"
                android:id="@+id/frag_menu_rmv_channel_btnId"
                android:layout_below="@+id/frag_menu_settings_btnId"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="7dp"
                android:background="#aaFFCC99"
                android:textColor="#FF0000"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/frag_menu_logout_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Log Out"
                android:layout_centerInParent="true"
                android:background="#aaFFCC99"
                android:textColor="#FF0000"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="7dp">
        </Button>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
</LinearLayout>
