<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mor.final_project_client_adv2.SettingsActivity"
    android:background="@color/banana"
    android:paddingTop="50dp"
    android:paddingBottom="50dp"
    android:paddingLeft="7dp">

    <RelativeLayout
        android:id="@+id/act_settings_bg_update_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/act_set_bg_update_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Background app update rate
             (in seconds):"
            android:layout_centerVertical="true"
            android:textColor="@color/red"
            android:textSize="15dp"/>
        <Spinner
            android:id="@+id/act_set_spinner_update_bg"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/peach"
            android:scrollbarSize="50dp"
            android:layout_toRightOf="@+id/act_set_bg_update_txt_view">
        </Spinner>
        <ImageButton
            android:id="@+id/act_set_bg_update_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/act_set_spinner_update_bg"
            android:src="@drawable/send_2"
            android:background="@color/banana"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/act_settings_fg_update_layout"
        android:layout_below="@id/act_settings_bg_update_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/act_set_fg_update_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foreground app update rate
             (in minutes):"
            android:layout_centerVertical="true"
            android:textColor="@color/red"
            android:textSize="15dp"/>
        <Spinner
            android:id="@+id/act_set_spinner_update_fg"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/peach"
            android:scrollbarSize="50dp"
            android:layout_toRightOf="@+id/act_set_fg_update_txt_view">
        </Spinner>
        <ImageButton
            android:id="@+id/act_set_fg_update_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/act_set_spinner_update_fg"
            android:src="@drawable/send_2"
            android:background="@color/banana"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/act_settings_server_adresses_layout"
        android:layout_below="@id/act_settings_fg_update_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/act_set_svr_addr_txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server address:"
            android:layout_centerVertical="true"
            android:textColor="@color/red"
            android:textSize="15dp"/>
        <Spinner
            android:id="@+id/act_set_spinner_svr_addr"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/peach"
            android:scrollbarSize="50dp"
            android:layout_toRightOf="@+id/act_set_svr_addr_txtView">
        </Spinner>
        <ImageButton
            android:id="@+id/act_set_svr_addr_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/act_set_spinner_svr_addr"
            android:src="@drawable/send_2"
            android:background="@color/banana"/>

    </RelativeLayout>


</RelativeLayout>
