<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mor.final_project_client_adv2.AddNewChannelActivity"
    android:background="#FFDD99">


    <ImageView
        android:id="@+id/act_add_new_chan_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/new_icon"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/act_add_text_view_enter_new"
        android:layout_below="@+id/act_add_new_chan_icon"
        android:text="Enter channel number"
        android:textSize="20dp"
        android:textColor="#FF0000"
        android:layout_marginTop="20dp"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF99"
        android:textColor="#FF0000"
        android:hint="first name"
        android:textSize="20dp"
        android:padding="10dp"
        android:id="@+id/act_add_edit_text_new_chan"
        android:layout_below="@+id/act_add_text_view_enter_new"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/act_add_btn_id"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:padding="0dp"
        android:shadowColor="#000000"
        android:background="#FFFF99"
        android:textSize="20dp"
        android:textColor="#FF0000"
        android:layout_centerInParent="true"
        />

</RelativeLayout>
